<?xml version="1.0" encoding="utf-8"?>

                                                         
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/common_white"
        android:orientation="vertical" android:tag="layout/dialog_fragment_choose_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bind="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="9.6dp"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/dialog_fragment_choose_layout_tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_options"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/common_grey"
            android:textSize="17dp" />
    </LinearLayout>
         